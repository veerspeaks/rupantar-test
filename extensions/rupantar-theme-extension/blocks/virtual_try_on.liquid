</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tryOnButton = document.getElementById('virtualTryOnButton');
  const modal = document.getElementById('virtualTryOnModal');
  const closeModalButton = document.getElementById('closeModalButton');
  const startVirtualTryOnBtn = document.getElementById('startVirtualTryOnBtn');
  const introSection = document.getElementById('virtualTryOnIntro');
  const productInfoSection = document.getElementById('virtualTryOnProductInfo');

  if (tryOnButton) {
    tryOnButton.addEventListener('click', function() {
      modal.classList.remove('hidden');
    });
  }

  if (closeModalButton) {
    closeModalButton.addEventListener('click', function() {
      modal.classList.add('hidden');
      // Reset modal for next time
      introSection.classList.remove('hidden');
      productInfoSection.classList.add('hidden');
    });
  }

  if (startVirtualTryOnBtn) {
    startVirtualTryOnBtn.addEventListener('click', function() {
      introSection.classList.add('hidden');
      productInfoSection.classList.remove('hidden');
      // Optionally initialize your upload/try-on functionality here:
      if (typeof initializeUIElements === "function" && typeof setupEventListeners === "function") {
        initializeUIElements();
        setupEventListeners();
      }
    });
  }

  window.addEventListener('click', function(event) {
    if (event.target === modal) {
      modal.classList.add('hidden');
      introSection.classList.remove('hidden');
      productInfoSection.classList.add('hidden');
    }
  });

  // Activate the upload photo feature
  const uploadBtn = document.querySelector('.upload-btn');
  const tryOnPhotoBtn = document.querySelector('.try-on-btn');
  const photoUploadInput = document.getElementById('photoUploadInput');
  const uploadedImageContainer = document.querySelector('.uploaded-image');

  if (uploadBtn && photoUploadInput && uploadedImageContainer) {
    uploadBtn.addEventListener('click', function() {
      photoUploadInput.click();
    });

    photoUploadInput.addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          uploadedImageContainer.innerHTML = '<img src="' + e.target.result + '" alt="Uploaded photo" style="width: 100%; height: auto;" />';
          // Enable the try-on button once a photo is uploaded
          if (tryOnPhotoBtn) {
            tryOnPhotoBtn.disabled = false;
          }
        };
        reader.readAsDataURL(file);
      }
    });
  }
});
</script>

