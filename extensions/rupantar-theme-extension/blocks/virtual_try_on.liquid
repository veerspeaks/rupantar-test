<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Original variable declarations
    const virtualTryOnButton = document.getElementById('virtualTryOnButton');
    const modal = document.getElementById('virtualTryOnModal');
    const closeModalButton = document.getElementById('closeModalButton');
    const startVirtualTryOnBtn = document.getElementById('startVirtualTryOnBtn');
    const welcomeModal = document.querySelector('.welcome-modal');
    const guidelinesInterface1 = document.getElementById('guidelinesInterface1');
    const guidelinesInterface2 = document.getElementById('guidelinesInterface2');
    const guidelinesInterface3 = document.getElementById('guidelinesInterface3');
    const tryOnInterface = document.getElementById('tryOnInterface');
    const uploadPreview = document.getElementById('uploadPreview');
    const photoUploadInput = document.getElementById('photoUploadInput');
    const tryOnBtn = document.getElementById('tryOnBtn');
    const closeTryOnButton = document.getElementById('closeTryOnButton');
  
    // New container selection function
    function insertButtonIntoContainer() {
      const containerSelector = "{{ block.settings.container_class }}";
      const container = document.querySelector('.' + containerSelector) || document.querySelector('#' + containerSelector);
      const virtualTryOnContainer = document.getElementById('virtualTryOnEmbedContainer');
      
      if (container && virtualTryOnContainer) {
        // Remove any existing instances of the button
        const existingContainer = container.querySelector('#virtualTryOnEmbedContainer');
        if (existingContainer) {
          existingContainer.remove();
        }
        
        // Clone the container to avoid moving the original
        const containerClone = virtualTryOnContainer.cloneNode(true);
        
        // Update styles for relative positioning
        containerClone.style.position = 'relative';
        containerClone.style.transform = 'none';
        containerClone.style.top = 'auto';
        containerClone.style.left = 'auto';
        containerClone.style.right = 'auto';
        containerClone.style.bottom = 'auto';
        containerClone.style.margin = '10px 0';
        
        // Add the button to the specified container
        container.appendChild(containerClone);
        
        // Reattach event listeners to the cloned button
        const clonedButton = containerClone.querySelector('#virtualTryOnButton');
        if (clonedButton) {
          clonedButton.addEventListener('click', () => {
            document.getElementById('virtualTryOnModal').classList.remove('hidden');
          });
        }
        
        // Remove the original floating button if it exists
        if (virtualTryOnContainer.parentElement) {
          virtualTryOnContainer.remove();
        }
      } else {
        console.warn('Container not found: ' + containerSelector);
      }
    }
  
    // Call the insertion function
    insertButtonIntoContainer();
    
    // Observer for dynamic content
    const observer = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        if (!document.querySelector('#virtualTryOnButton')) {
          insertButtonIntoContainer();
        }
      });
    });
  
    observer.observe(document.body, {
      childList: true,
      subtree: true
    });
    
    // Original event listeners
    startVirtualTryOnBtn.addEventListener('click', () => {
      welcomeModal.classList.add('hidden');
      guidelinesInterface1.classList.remove('hidden');
    });
  
    document.getElementById('proceedToGuidelinesBtn2').addEventListener('click', () => {
      guidelinesInterface1.classList.add('hidden');
      guidelinesInterface2.classList.remove('hidden');
    });
  
    document.getElementById('proceedToGuidelinesBtn3').addEventListener('click', () => {
      guidelinesInterface2.classList.add('hidden');
      guidelinesInterface3.classList.remove('hidden');
    });
  
    document.getElementById('proceedToFinalBtn').addEventListener('click', () => {
      guidelinesInterface3.classList.add('hidden');
      tryOnInterface.classList.remove('hidden');
    });
  
    const skipToFinal = () => {
      guidelinesInterface1.classList.add('hidden');
      guidelinesInterface2.classList.add('hidden');
      guidelinesInterface3.classList.add('hidden');
      tryOnInterface.classList.remove('hidden');
    };
  
    document.getElementById('skipToFinalBtn1').addEventListener('click', skipToFinal);
    document.getElementById('skipToFinalBtn2').addEventListener('click', skipToFinal);
    document.getElementById('skipToFinalBtn3').addEventListener('click', skipToFinal);
  
    const closeModal = () => {
      modal.classList.add('hidden');
      resetInterface();
    };
  
    closeModalButton.addEventListener('click', closeModal);
    closeTryOnButton.addEventListener('click', closeModal);
    document.getElementById('closeGuidelinesButton1').addEventListener('click', closeModal);
    document.getElementById('closeGuidelinesButton2').addEventListener('click', closeModal);
    document.getElementById('closeGuidelinesButton3').addEventListener('click', closeModal);
  
    uploadPreview.addEventListener('click', () => {
      photoUploadInput.click();
    });
  
    photoUploadInput.addEventListener('change', (event) => {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          uploadPreview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;">`;
          tryOnBtn.disabled = false;
        };
        reader.readAsDataURL(file);
      }
    });
  
    modal.addEventListener('click', (event) => {
      if (event.target === modal) {
        closeModal();
      }
    });
  
    function resetInterface() {
      welcomeModal.classList.remove('hidden');
      guidelinesInterface1.classList.add('hidden');
      guidelinesInterface2.classList.add('hidden');
      guidelinesInterface3.classList.add('hidden');
      tryOnInterface.classList.add('hidden');
      uploadPreview.innerHTML = `<div class="upload-icon">⬆️</div>`;
      tryOnBtn.disabled = true;
    }
  });
  </script>


