<script>
document.addEventListener('DOMContentLoaded', function() {
  const virtualTryOnButton = document.getElementById('virtualTryOnButton');
  const modal = document.getElementById('virtualTryOnModal');
  const closeModalButton = document.getElementById('closeModalButton');
  const startVirtualTryOnBtn = document.getElementById('startVirtualTryOnBtn');
  const welcomeModal = document.querySelector('.welcome-modal');
  const guidelinesInterface1 = document.getElementById('guidelinesInterface1');
  const guidelinesInterface2 = document.getElementById('guidelinesInterface2');
  const guidelinesInterface3 = document.getElementById('guidelinesInterface3');
  const tryOnInterface = document.getElementById('tryOnInterface');
  const uploadPreview = document.getElementById('uploadPreview');
  const photoUploadInput = document.getElementById('photoUploadInput');
  const tryOnBtn = document.getElementById('tryOnBtn');
  
  // Start virtual try-on (show first guidelines)
  startVirtualTryOnBtn.addEventListener('click', () => {
    welcomeModal.classList.add('hidden');
    guidelinesInterface1.classList.remove('hidden');
  });

  // Guidelines navigation
  document.getElementById('proceedToGuidelinesBtn2').addEventListener('click', () => {
    guidelinesInterface1.classList.add('hidden');
    guidelinesInterface2.classList.remove('hidden');
  });

  document.getElementById('proceedToGuidelinesBtn3').addEventListener('click', () => {
    guidelinesInterface2.classList.add('hidden');
    guidelinesInterface3.classList.remove('hidden');
  });

  document.getElementById('proceedToFinalBtn').addEventListener('click', () => {
    guidelinesInterface3.classList.add('hidden');
    tryOnInterface.classList.remove('hidden');
  });

  // Skip buttons
  const skipToFinal = () => {
    guidelinesInterface1.classList.add('hidden');
    guidelinesInterface2.classList.add('hidden');
    guidelinesInterface3.classList.add('hidden');
    tryOnInterface.classList.remove('hidden');
  };

  document.getElementById('skipToFinalBtn1').addEventListener('click', skipToFinal);
  document.getElementById('skipToFinalBtn2').addEventListener('click', skipToFinal);
  document.getElementById('skipToFinalBtn3').addEventListener('click', skipToFinal);

  // Open modal
  virtualTryOnButton.addEventListener('click', () => {
    modal.classList.remove('hidden');
  });

  // Close modal
  closeModalButton.addEventListener('click', () => {
    modal.classList.add('hidden');
    resetInterface();
  });

  // Handle photo upload
  uploadPreview.addEventListener('click', () => {
    photoUploadInput.click();
  });

  photoUploadInput.addEventListener('change', (event) => {
    const file = event.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (e) => {
        uploadPreview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="max-width: 100%; max-height: 100%; object-fit: contain;">`;
        tryOnBtn.disabled = false;
      };
      reader.readAsDataURL(file);
    }
  });

  // Close modal when clicking outside
  modal.addEventListener('click', (event) => {
    if (event.target === modal) {
      modal.classList.add('hidden');
      resetInterface();
    }
  });

  // Reset interface function update
  function resetInterface() {
    welcomeModal.classList.remove('hidden');
    guidelinesInterface1.classList.add('hidden');
    guidelinesInterface2.classList.add('hidden');
    guidelinesInterface3.classList.add('hidden');
    tryOnInterface.classList.add('hidden');
    uploadPreview.innerHTML = `
      <span class="upload-icon">ðŸ“¸</span>
      <span class="upload-text">Click to upload your photo</span>
    `;
    tryOnBtn.disabled = true;
  }
});
</script>

