<div style="position: fixed; bottom: 0; right: 0">
  <!-- Clickable area: the thumbs-up image -->
  <div id="clickableEmbed" style="cursor: pointer;">
    {{ "thumbs-up.png" | asset_url | img_tag }}
  </div>
</div>

<!-- Modal Overlay -->
<div id="helloWorldModal" style="display: none; position: fixed; z-index: 10000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);">
  <!-- Modal Content -->
  <div id="helloWorldModalContent" style="background-color: #fff; margin: 15% auto; padding: 20px; border: 1px solid #888; width: 80%; max-width: 400px; border-radius: 8px; text-align: center; position: relative;">
    <!-- Close Button -->
    <span id="closeModalButton" style="position: absolute; top: 10px; right: 15px; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
    <p>Hello World</p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var embedButton = document.getElementById('clickableEmbed');
    var modal = document.getElementById('helloWorldModal');
    var closeButton = document.getElementById('closeModalButton');

    if (embedButton) {
      embedButton.addEventListener('click', function() {
        // Display the floating overlay
        modal.style.display = 'block';
      });
    } else {
      console.error('Clickable embed element not found.');
    }

    if (closeButton) {
      closeButton.addEventListener('click', function() {
        // Hide the overlay when the close button is clicked
        modal.style.display = 'none';
      });
    }

    // Also hide the modal if user clicks outside of the modal content
    window.addEventListener('click', function(event) {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });
  });
</script>

{% schema %}
{
  "name": "App Embed",
  "target": "body",
  "settings": []
}
{% endschema %}